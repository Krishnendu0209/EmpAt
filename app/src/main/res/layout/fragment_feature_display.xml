<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:windowSoftInputMode="adjustResize"
    android:gravity="center"
    tools:context=".Fragments.FeatureDisplayFragment">
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test"/>
    <Button
        android:id="@+id/submit_attendance_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_login_register"
        android:text="Submit Attendance"
        android:textColor="#ffffff"
        android:textStyle="bold" />
    <Button
        android:id="@+id/register_employee_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_login_register"
        android:text="Register An Employee"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/modify_employee_record"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_login_register"
        android:text="Modify Employee Record"
        android:textColor="#ffffff"
        android:textStyle="bold" />
    <Button
        android:id="@+id/modify_employee_transactions"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_login_register"
        android:text="Modify Employee transactions"
        android:textColor="#ffffff"
        android:textStyle="bold" />
    <Button
        android:id="@+id/get_attendance_report"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_login_register"
        android:text="Get Attendance Report"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</LinearLayout>